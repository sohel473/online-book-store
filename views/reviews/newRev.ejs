<% include ../partials/header %>

<div class="container">
    <div class="row">  
      <h1 style="text-align: center">Review of <%= book[0].title %></h1>
      <div style="width: 30%; margin: 20px auto;"> 
        <form action="/review/<%= book[0].b_id %>" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="userName" placeholder="User Name">
          </div>
          <div class="form-group">
            <textarea style="width:100%; height: 100px;" id="review" name="comment" placeholder="Type review here"></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-block">submit</button>
          </div>
        </form>
      </div>
    </div>
</div>


<% include ../partials/footer %>