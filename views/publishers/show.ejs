<% include ../partials/header %>

<div class="container">
    <div class="row text-center">
        <div class="col-md-2">
            <div class="caption">
                <h3><strong><%= publisher[0].publisher_name %></strong></h3>
            </div>
            <div class="thumbnail">
                <img class="img-responsive" src="<%= publisher[0].pub_image %>">
            </div>
            <div>
                <p>Site:
                    <a href="<%= publisher[0].website %>" target="_blank"><%= publisher[0].website.substring(0,25) %>...</a>
                </p>
            </div>
        </div>
        <div class="col-md-2">
            <h2>Books:</h2>
        </div>
        <div class="col-md-8">
            
            <% publisher.forEach(function(book){ %>
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="thumbnail">
                        <img class="img-responsive" src = "<%= book.book_image %>">
                        <div class="caption">
                            <h4><%= book.title %></h4>
                        </div>
                        <p>
                            <a href="/books/<%= book.b_id %>" class="btn btn-primary">See More</a>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>