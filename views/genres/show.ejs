<% include ../partials/header %>

<div class="container">
    <div class="row text-center">
        <div>
            <h2>
                <span><%= genre[0].genre_name %> genre Books:</span>
            </h2>
            <% genre.forEach(function(book){ %>
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="thumbnail">
                        <img class="img-responsive" src = "<%= book.book_image %>">
                        <div class="caption">
                            <h4><%= book.title %></h4>
                        </div>
                        <p>
                            <a href="/books/<%= book.b_id %>" class="btn btn-primary">See More</a>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<% include ../partials/footer %>