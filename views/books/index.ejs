<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><i class="fas fa-book"></i> Welcome to Online Book Shop</h1>
            <p>View our hand-picked books from allover the world</p>
        </div>
    </header>
    
    
    <div class="row text-center">
        <% books.forEach(function (book) { %>
            <div class="col-md-3 col-sm-4 col-xs-12">
                <div class="thumbnail">
                    <img class="img-responsive" src = "<%= book.image %>">
                    <div class="caption">
                        <h4><%= book.title %></h4>
                    </div>
                    <p>
                        <a href="/books/<%= book.b_id %>" class="btn btn-primary">See More</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>


<% include ../partials/footer %>